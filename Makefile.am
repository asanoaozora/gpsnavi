AUTOMAKE_OPTIONS = foreign
SUBDIRS = src
DIST_SUBDIRS = src
CLEANFILES = flite jtalk

bin_SCRIPTS = flite jtalk
flite: flite.in
	sed -e 's,[@]datadir[@],$(datadir),g' $(srcdir)/flite.in > flite
	chmod +x flite

jtalk: jtalk.in
	sed -e 's,[@]datadir[@],$(datadir),g' -e 's,[@]exec_prefix[@],$(exec_prefix),g' $(srcdir)/jtalk.in > jtalk
	chmod +x jtalk

